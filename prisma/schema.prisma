generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String?
  password String
  profile  Profile?
  jobs     Job[]    // âœ… 1-to-many: one user has many jobs
}

model Profile {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  contact    String
  address    String
  resumeUrl  String
  createdAt  DateTime @default(now())
  userId     Int?     @unique
  jobId      Int?     // ðŸ‘ˆ New field
  users      User?    @relation(fields: [userId], references: [id])
  job        Job?      @relation(fields: [jobId], references: [id])
}


model Job {
  id               Int      @id @default(autoincrement())
  slug             String   @unique
  title            String
  type             String
  locationType     String
  location         String?
  description      String?
  salary           Int
  companyName      String
  applicationEmail String?
  applicationUrl   String?
  companyLogoUrl   String?
  approved         Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
profiles    Profile[]
 userId Int?   // ðŸ‘ˆ make it optional for now
user   User?  @relation(fields: [userId], references: [id])

  @@map("jobs")
}


